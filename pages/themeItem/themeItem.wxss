page {
    background-color: rgb(240,240,240);
}
.head-banner {
    width: 100%;
    height: 500rpx;
    position: relative;
}
.head-banner image {
    width: 100%;
    height: 500rpx;
}
.top-title {
    color: #fff;
    padding-left: 10px;
    padding-right: 10px;
    position: absolute;
    bottom: 80rpx;
    left: 10rpx;
}

/**新闻列表**/
.news-container {
    display: flex;
    flex-direction: column;
    margin: 40rpx 20rpx 20rpx 20rpx;
}
.head {
    color: rgb(116,116,116);
    font-size: 16px;
    line-height: 60rpx;
}
.news-item {
    display: flex;
    flex-direction: row;
    border-radius: 5px;
    box-shadow: 0 2px 2px rgb(194,194,194);
    margin-top: 20rpx;
    background-color: #fff;
}
.news-title {
    width: 75%;
    padding: 20px 10px;
}
.news-image {
    width: 80px;
    height: 80px;
    padding: 10px;
}