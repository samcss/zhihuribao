.main-page {
    width: 100%;
    background-color: rgb(240,240,240);
    position: absolute;
    z-index: 2;
    transition: all .4s ease;
    -webkit-transition: all .4s ease;
}
swiper {
    width: 100%;
    height: 500rpx;
}
swiper-item{
    position: relative;
}
swiper image {
    width: 100%;
    height: 500rpx;
}
.top-title {
    color: #fff;
    padding-left: 10px;
    padding-right: 10px;
    position: absolute;
    bottom: 80rpx;
    left: 10rpx;
}

/**新闻列表**/
.news-container {
    display: flex;
    flex-direction: column;
    margin: 40rpx 20rpx 20rpx 20rpx;
}
.head {
    color: rgb(116,116,116);
    font-size: 16px;
    line-height: 60rpx;
}
.news-item {
    display: flex;
    flex-direction: row;
    border-radius: 5px;
    box-shadow: 0 2px 2px rgb(194,194,194);
    margin-top: 20rpx;
    background-color: #fff;
}
.news-title {
    width: 75%;
    padding: 20px 10px;
}
.news-image {
    width: 80px;
    height: 80px;
    padding: 10px;
}
.more {
    color: #333;
    font-size: 14px;
    text-align: center;
    margin: 30rpx 0;
}
.more image {
    width: 10px;
    height: 10px;
    margin-left: 10rpx;
    position: relative;
    animation: mymove 1s infinite;
    -webkit-animation: mymove 1s infinite;
}
@keyframes mymove
{
from { top: -3px; }
to { top: 3px; }
}


@-webkit-keyframes mymove 
{
from { top: -3px; }
to { top: 3px; }
}


/**侧滑菜单**/
.side {
    width: 750rpx;
    height: 100%;
    position: fixed;
    z-index: 1;
}
.side-user {
    height: 200rpx;
    width: 75%;
    background-color: #00a2ea;
}
.home-menu {
    width: 75%;
    height: 40px;
    font-size: 36rpx;
    color: deepskyblue;
    line-height: 40px;
    letter-spacing: 3px;
    padding-left: 20px;
    background-color: rgb(236,236,236);
}
.home-menu image {
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 20px;
}
.theme-list {
    width: 75%;
    height: 40px;
    font-size: 32rpx;
    line-height: 40px;
    padding-left: 20px;
    letter-spacing: 2px;
}

