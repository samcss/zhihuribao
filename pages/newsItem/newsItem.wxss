.item-head {
    width: 100%;
    height: 500rpx;
    position: relative;
}
.head-banner {
    width: 100%;
    height: 500rpx;
}
.head-title {
    color: #fff;
    padding-left: 10px;
    padding-right: 10px;
    position: absolute;
    bottom: 80rpx;
    left: 10rpx;
}

/**内容区域**/
.content-container {
    display: flex;
    flex-direction: column;
    margin: 60rpx 40rpx 40rpx 40rpx; 
}
.content-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10rpx;
}
.author {
    flex-direction: row;
    padding: 20rpx 0;
    font-size: 12px;
}
.content {
    color: #333;
    font-size: 14px;
    letter-spacing: 2px;
    line-height: 26px;
}
